<%= form_for @user do |u| %>
    
<body>
    <div class="bootshape login-form">
        <div class="col-sm-6 col-md-5 col-lg-4 col-sm-offset-2 text-center login-popup-wrap">
            <div class="login-popup">
                <h1 class="title"><strong>Create an Account!</strong></h1>

                <form role="form">
                    <div class="form-group">
                    <%= u.text_field :name, :placeholder => "Name"  %>
                    </div>
                    <div class="form-group">
                    <%= u.text_field :email, :placeholder => "Email"  %>
                    </div>
                    <div class="form-group">
                      <%= u.password_field :password, :placeholder => "Password" %>
                    </div>
                    <div class="form-group">
                    <%= u.text_field :phoneNum, :placeholder => "Phone Number"  %>
                    </div>
                    <div class="form-group">
                    <%= u.text_field :message, :placeholder => "Leave a message for the bride & groom?"  %>
                    </div>

                    <div class="form-group">
                        <p>Save a seat?<p>
                      <%= u.check_box :attendance, :placeholder => "Save a seat?" %>
                    </div>
                    
                    <div class="form-group">
                        <%= u.submit "Login" %>
                    </div>
                </form>

                <div class="divider"></div>
                <div>
                    <%=link_to "Already a member? Log in", new_sessions_path %>
                </div>
            </div>
            <div class="login-popup">
            Â© 2014 Wedding Login Form. Proudly created by <a href="http://bootshape.com">Bootshape.com</a> Photos by johnhopephotography.com
            </div>
        </div>
    </div>
</body>
<% end %>


